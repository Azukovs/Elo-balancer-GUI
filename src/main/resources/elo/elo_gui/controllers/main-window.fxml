<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<AnchorPane prefHeight="960.0" prefWidth="1600.0" xmlns="http://javafx.com/javafx/17.0.2-ea"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="elo.elo_gui.controllers.MainController">
    <children>
        <VBox fx:id="leftPanel" alignment="CENTER" prefHeight="950.0" prefWidth="300.0" spacing="20.0"
              xmlns:fx="http://javafx.com/fxml">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>

            <Label fx:id="playerListLabel" text="Balanced team generator"/>
            <HBox alignment="CENTER_LEFT" prefHeight="5.0" prefWidth="200.0">
                <children>
                    <Button fx:id="sheetBrowserButton" maxWidth="120.0" minWidth="120.0" onAction="#onSelectSourceClick"
                            prefWidth="120.0" text="Select source sheet"/>
                    <Label fx:id="loadedFile" alignment="CENTER_RIGHT" textAlignment="CENTER">
                        <HBox.margin>
                            <Insets left="10.0"/>
                        </HBox.margin>
                    </Label>
                </children>
            </HBox>
            <HBox>
                <children>
                    <Button fx:id="setColumns" disable="true" maxWidth="120.0" minWidth="120.0" mnemonicParsing="false"
                            onAction="#onSetColumnsClick" prefWidth="120.0" text="Set columns"/>
                </children>
            </HBox>
            <HBox>
                <children>
                    <Button fx:id="loadPlayersButton" disable="true" maxWidth="120.0" minWidth="120.0"
                            onAction="#onLoadPlayersClick" prefWidth="120.0" text="Load players"/>
                </children>
            </HBox>
            <HBox>
                <children>
                    <Button fx:id="checkTable" disable="true" maxWidth="120.0" minWidth="120.0" mnemonicParsing="false"
                            onAction="#onCheckTableClick" prefWidth="120.0" text="Check table"/>
                </children>
            </HBox>
            <TableView fx:id="playerTable" editable="true" prefHeight="770.0" prefWidth="260.0">
                <columns>
                    <TableColumn fx:id="numberColumn" editable="false" maxWidth="25.0" minWidth="25.0" prefWidth="25.0"
                                 resizable="false" text="#"/>
                    <TableColumn fx:id="discordNameColumn" editable="false" maxWidth="150.0" prefWidth="150.0"
                                 resizable="false" sortable="false" text="Discord name"/>
                    <TableColumn fx:id="eloColumn" maxWidth="60.0" prefWidth="60.0" resizable="false" sortable="false"
                                 text="ELO"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
        </VBox>
        <VBox layoutX="300.0" layoutY="13.0" prefHeight="150.0" prefWidth="300.0">
            <children>
                <HBox alignment="CENTER_RIGHT" prefHeight="50.0" prefWidth="200.0">
                    <children>
                        <Label maxHeight="20.0" maxWidth="180.0" minHeight="20.0" minWidth="180.0" prefHeight="20.0"
                               prefWidth="180.0" text="Iterations (per 100k)"/>
                        <TextField fx:id="iterationCountTextField" maxHeight="25.0" maxWidth="50.0" minHeight="25.0"
                                   minWidth="50.0" prefHeight="25.0" prefWidth="50.0" text="5"/>
                    </children>
                    <opaqueInsets>
                        <Insets/>
                    </opaqueInsets>
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </VBox.margin>
                </HBox>
                <HBox alignment="CENTER_RIGHT" layoutX="10.0" layoutY="10.0" prefHeight="50.0" prefWidth="200.0">
                    <children>
                        <!--                        <Label maxHeight="20.0" maxWidth="180.0" minHeight="20.0" minWidth="180.0" prefHeight="20.0" prefWidth="180.0" text="Option count: " />-->
                        <!--                        <TextField fx:id="optionCountTextField" maxHeight="25.0" maxWidth="50.0" minHeight="25.0" minWidth="50.0" prefHeight="25.0" prefWidth="50.0" text="1" />-->
                    </children>
                    <opaqueInsets>
                        <Insets/>
                    </opaqueInsets>
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </VBox.margin>
                </HBox>
                <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="200.0">
                    <children>
                        <Button fx:id="generateButton" disable="true" mnemonicParsing="false"
                                onAction="#onGenerateTeamsClick" text="Generate teams"/>
                    </children>
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </VBox.margin>
                    <opaqueInsets>
                        <Insets/>
                    </opaqueInsets>
                </HBox>
                <HBox minHeight="20.0" minWidth="200.0" prefHeight="50.0" prefWidth="200.0">
                    <children>
                        <ProgressBar fx:id="progressBar" prefHeight="20.0" prefWidth="260.0" progress="0.0"/>
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
        </VBox>
        <VBox layoutX="314.0" layoutY="207.0">
            <children>
                <HBox alignment="CENTER_RIGHT" prefHeight="25.0" prefWidth="280.0">
                    <children>
                        <Label alignment="TOP_LEFT" maxWidth="150.0" minWidth="150.0" prefWidth="150.0"
                               text="Force teammates"/>
                        <Button fx:id="addTeammatesButton" disable="true" maxWidth="130.0" minWidth="130.0"
                                mnemonicParsing="false" onAction="#onAddTeammatesClick" prefWidth="130.0"
                                text="Add teammates"/>
                    </children>
                </HBox>
                <TableView fx:id="teammateTable" prefHeight="300.0" prefWidth="280.0" visible="false">
                    <columns>
                        <TableColumn fx:id="teammate1Column" editable="false" maxWidth="130.0" minWidth="130.0"
                                     prefWidth="130.0" resizable="false" sortable="false" text="Player 1"/>
                        <TableColumn fx:id="teammate2Column" editable="false" maxWidth="130.0" minWidth="130.0"
                                     prefWidth="130.0" resizable="false" sortable="false" text="Player 2"/>
                    </columns>
                </TableView>
                <HBox alignment="CENTER_RIGHT" prefHeight="25.0" prefWidth="280.0">
                    <children>
                        <Label maxWidth="150.0" minWidth="150.0" prefWidth="150.0" text="Force separate teams"/>
                        <Button fx:id="addTeamSeparationButton" disable="true" maxWidth="130.0" minWidth="130.0"
                                mnemonicParsing="false" onAction="#onAddTeamSeparationClick" prefWidth="130.0"
                                text="Add team separation"/>
                    </children>
                </HBox>
                <TableView fx:id="teamSeparationTable" prefHeight="300.0" prefWidth="280.0" visible="false">
                    <columns>
                        <TableColumn fx:id="teamSeparation1Column" editable="false" maxWidth="130.0" minWidth="130.0"
                                     prefWidth="130.0" resizable="false" sortable="false" text="Player 1"/>
                        <TableColumn fx:id="teamSeparation2Column" editable="false" maxWidth="130.0" minWidth="130.0"
                                     prefWidth="130.0" resizable="false" sortable="false" text="Player 2"/>
                    </columns>
                </TableView>
            </children>
        </VBox>
        <VBox layoutX="600.0" layoutY="27.0">
            <children>
                <TextArea fx:id="infoTextArea" editable="false" prefHeight="50.0" prefWidth="986.0"/>
                <Separator prefWidth="200.0"/>
                <TextArea fx:id="outputTextArea" prefHeight="150.0" prefWidth="986.0"/>
                <Separator prefWidth="200.0"/>
                <TableView fx:id="outputTable" prefHeight="600.0" prefWidth="800.0">
                    <columns>
                        <TableColumn fx:id="teamIcon" editable="false" maxWidth="30.0" minWidth="30.0" prefWidth="30.0"
                                     sortable="false" text="Icon"/>
                        <TableColumn fx:id="teamName" editable="false" maxWidth="80.0" minWidth="80.0" sortable="false"
                                     text="Team name"/>
                        <TableColumn fx:id="averageElo" editable="false" maxWidth="50.0" minWidth="50.0"
                                     prefWidth="50.0" sortable="false" text="Avg elo"/>
                        <TableColumn fx:id="player1" editable="false" sortable="false" text="Player 1"/>
                        <TableColumn fx:id="player2" editable="false" sortable="false" text="Player 2"/>
                        <TableColumn fx:id="player3" editable="false" sortable="false" text="Player 3"/>
                        <TableColumn fx:id="player4" editable="false" sortable="false" text="Player 4"/>
                        <TableColumn fx:id="player5" editable="false" sortable="false" text="Player 5"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>
                <HBox alignment="CENTER">
                    <children>
                        <Button fx:id="copyToClipboard" maxHeight="50.0" maxWidth="200.0" minHeight="50.0"
                                minWidth="200.0" mnemonicParsing="false" onAction="#onCopyToClipboard" prefHeight="50.0"
                                prefWidth="200.0" text="Copy to Clipboard"/>
                    </children>
                </HBox>
            </children>
        </VBox>
        <TextArea fx:id="hiddenField" disable="true" editable="false" visible="false"/>
    </children>
</AnchorPane>
