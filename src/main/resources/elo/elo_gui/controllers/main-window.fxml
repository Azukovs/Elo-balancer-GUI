<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="960.0" prefWidth="1600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="elo.elo_gui.controllers.MainController">
    <children>
        <VBox fx:id="leftPanel" alignment="CENTER" prefHeight="950.0" prefWidth="300.0" spacing="20.0" xmlns:fx="http://javafx.com/fxml">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>

            <Label fx:id="playerListLabel" text="Balanced team generator" />
            <HBox alignment="CENTER_LEFT" prefHeight="5.0" prefWidth="200.0">
                <children>
                    <Button fx:id="sheetBrowserButton" maxWidth="120.0" minWidth="120.0" onAction="#onSelectSourceClick" prefWidth="120.0" text="Select source sheet" />
                    <Label fx:id="loadedFile" alignment="CENTER_RIGHT" textAlignment="CENTER">
                        <HBox.margin>
                            <Insets left="10.0" />
                        </HBox.margin>
                    </Label>
                </children>
            </HBox>
            <HBox>
                <children>
                    <Button fx:id="setColumns" disable="true" maxWidth="120.0" minWidth="120.0" mnemonicParsing="false" onAction="#onSetColumnsClick" prefWidth="120.0" text="Set columns" />
                </children>
            </HBox>
            <HBox>
                <children>
                    <Button fx:id="loadPlayersButton" disable="true" maxWidth="120.0" minWidth="120.0" onAction="#onLoadPlayersClick" prefWidth="120.0" text="Load players" />
                </children>
            </HBox>
            <HBox>
                <children>
                    <Button fx:id="checkTable" disable="true" maxWidth="120.0" minWidth="120.0" mnemonicParsing="false" onAction="#onCheckTableClick" prefWidth="120.0" text="Check table" />
                </children>
            </HBox>
            <TableView fx:id="playerTable" editable="true" prefHeight="770.0" prefWidth="260.0">
                <columns>
                    <TableColumn fx:id="numberColumn" editable="false" maxWidth="25.0" minWidth="25.0" prefWidth="25.0" resizable="false" text="#" />
                    <TableColumn fx:id="discordNameColumn" editable="false" maxWidth="150.0" prefWidth="150.0" resizable="false" sortable="false" text="Discord name" />
                    <TableColumn fx:id="eloColumn" maxWidth="60.0" prefWidth="60.0" resizable="false" sortable="false" text="ELO" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </VBox>
        <Pane layoutX="300.0" layoutY="13.0" prefHeight="925.0" prefWidth="961.0">
            <children>
                <VBox prefHeight="150.0" prefWidth="300.0">
                    <children>
                        <HBox alignment="CENTER_RIGHT" prefHeight="50.0" prefWidth="200.0">
                            <children>
                                <Label maxHeight="20.0" maxWidth="180.0" minHeight="20.0" minWidth="180.0" prefHeight="20.0" prefWidth="180.0" text="Iterations in millions" />
                                <TextField fx:id="iterationCountTextField" maxHeight="25.0" maxWidth="50.0" minHeight="25.0" minWidth="50.0" prefHeight="25.0" prefWidth="50.0" text="1" />
                            </children>
                            <opaqueInsets>
                                <Insets />
                            </opaqueInsets>
                            <VBox.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </VBox.margin>
                        </HBox>
                        <HBox alignment="CENTER_RIGHT" layoutX="10.0" layoutY="10.0" prefHeight="50.0" prefWidth="200.0">
                            <children>
                                <Label maxHeight="20.0" maxWidth="180.0" minHeight="20.0" minWidth="180.0" prefHeight="20.0" prefWidth="180.0" text="Option count: " />
                                <TextField fx:id="optionCountTextField" maxHeight="25.0" maxWidth="50.0" minHeight="25.0" minWidth="50.0" prefHeight="25.0" prefWidth="50.0" text="3" />
                            </children>
                            <opaqueInsets>
                                <Insets />
                            </opaqueInsets>
                            <VBox.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </VBox.margin>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
                            <children>
                                <Button fx:id="generateButton" disable="true" mnemonicParsing="false" onAction="#onGenerateTeamsClick" text="Generate teams" />
                            </children>
                            <VBox.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </VBox.margin>
                            <opaqueInsets>
                                <Insets />
                            </opaqueInsets>
                        </HBox>
                    </children>
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                </VBox>
                <TextArea fx:id="errorTextArea" editable="false" layoutX="300.0" layoutY="14.0" prefHeight="175.0" prefWidth="986.0" />
                <TextArea fx:id="outputTextArea" layoutX="302.0" layoutY="210.0" prefHeight="708.0" prefWidth="986.0" />
                <ProgressBar fx:id="progressBar" layoutX="14.0" layoutY="166.0" prefHeight="18.0" prefWidth="280.0" progress="0.0" />
                <HBox alignment="CENTER_RIGHT" layoutX="14.0" layoutY="194.0" prefHeight="25.0" prefWidth="280.0">
                    <children>
                        <Label alignment="TOP_LEFT" maxWidth="150.0" minWidth="150.0" prefWidth="150.0" text="Force teammates" />
                        <Button fx:id="addTeammatesButton" disable="true" maxWidth="130.0" minWidth="130.0" mnemonicParsing="false" onAction="#onAddTeammatesClick" prefWidth="130.0" text="Add teammates" />
                    </children>
                </HBox>
                <TableView fx:id="teammateTable" layoutX="14.0" layoutY="219.0" prefHeight="300.0" prefWidth="280.0" visible="false">
                    <columns>
                        <TableColumn fx:id="teammate1Column" editable="false" maxWidth="130.0" minWidth="130.0" prefWidth="130.0" resizable="false" sortable="false" text="Player 1" />
                        <TableColumn fx:id="teammate2Column" editable="false" maxWidth="130.0" minWidth="130.0" prefWidth="130.0" resizable="false" sortable="false" text="Player 2" />
                    </columns>
                </TableView>
                <HBox alignment="CENTER_RIGHT" layoutX="14.0" layoutY="539.0" prefHeight="25.0" prefWidth="280.0">
                    <children>
                        <Label maxWidth="150.0" minWidth="150.0" prefWidth="150.0" text="Force separate teams" />
                        <Button fx:id="addTeamSeparationButton" disable="true" maxWidth="130.0" minWidth="130.0" mnemonicParsing="false" onAction="#onAddTeamSeparationClick" prefWidth="130.0" text="Add team separation" />
                    </children>
                </HBox>
                <TableView fx:id="teamSeparationTable" layoutX="14.0" layoutY="564.0" prefHeight="300.0" prefWidth="280.0" visible="false">
                    <columns>
                        <TableColumn fx:id="teamSeparation1Column" editable="false" maxWidth="130.0" minWidth="130.0" prefWidth="130.0" resizable="false" sortable="false" text="Player 1" />
                        <TableColumn fx:id="teamSeparation2Column" editable="false" maxWidth="130.0" minWidth="130.0" prefWidth="130.0" resizable="false" sortable="false" text="Player 2" />
                    </columns>
                </TableView>
            </children>
        </Pane>
    </children>
</AnchorPane>
